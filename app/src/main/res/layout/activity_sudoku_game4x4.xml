<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zach.christensen.everyonessudoku.SudokuGame4x4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerTextView"
        android:text="0:00"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:rowOrderPreserved="true"
        android:useDefaultMargins="false"
        android:layout_below="@+id/timerTextView"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E"
            android:id="@+id/button10"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"
            android:layout_below="@+id/gridLayout"
            android:layout_alignStart="@+id/gridLayout" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:id="@+id/button11"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"
            android:layout_below="@+id/gridLayout"
            android:layout_toEndOf="@+id/button10" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/button12"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"
            android:layout_below="@+id/gridLayout"
            android:layout_alignEnd="@+id/btnRestart" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:id="@+id/button13"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button_dark"
            android:layout_below="@+id/button12"
            android:layout_alignRight="@+id/btnRestart" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:id="@+id/button14"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"
            android:layout_below="@+id/button13"
            android:layout_alignRight="@+id/btnRestart" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button15"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="12dp"
            android:minHeight="72dp"
            android:minWidth="72dp"
            android:background="@drawable/grid_button"
            android:layout_below="@+id/button14"
            android:layout_alignRight="@+id/btnRestart" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/btnPause"
        android:minWidth="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/btnPause"
        android:layout_centerHorizontal="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:minWidth="48dp"
            android:layout_above="@+id/btnPause"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/btn2"
            android:minWidth="48dp"
            android:layout_above="@+id/btnPause"
            android:layout_toEndOf="@+id/btn1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/btn3"
            android:minWidth="48dp"
            android:layout_alignTop="@+id/btn2"
            android:layout_toEndOf="@+id/btn2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:minWidth="48dp"
            android:layout_alignTop="@+id/btn3"
            android:layout_toEndOf="@+id/btn3" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/btnRestart"
        android:minWidth="60dp"
        android:layout_alignTop="@+id/btnUndo"
        android:layout_toEndOf="@+id/btnPause"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/btnUndo"
        android:minWidth="70dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint"
        android:id="@+id/btnHint"
        android:minWidth="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnUndo"
        android:layout_marginRight="15dp" />

</RelativeLayout>
